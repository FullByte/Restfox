{
    "name": "Restfox",
    "description": "Minimalistic HTTP Client for API Development and Testing",
    "version": "1.0.602",
    "manifest_version": 3,
    "icons": {
        "512": "icons/favicon.png"
    },
    "permissions": [],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "512": "icons/favicon.png"
        }
    }
}
