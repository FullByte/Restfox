{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": false,
        "module": "ESNext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": true,
        // "checkJs": true, // Uncomment this line to enable type checking for js files
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
        ],
        "target": "ES6",
        "noEmit": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
