{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": false,
        "module": "ESNext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "noEmit": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
